html
 	position relative
 	min-height 100%
 
.main-container
	padding 65px 0
 	 
.header-main
	width 100%
	height 100px
		
	.logo		
		padding-top 30px
		
	.logo-image:hover
		opacity 0.9
		cursor pointer
		
	nav		
		margin 0 auto
										
		& ul
			list-style-type none
			padding-top 40px
						
			& li				
				display inline
				text-decoration none
											
				& .item
					font-size 20px
					color #1012B4
					padding 0 20px					
					
					&:hover
						color black

.ul-list
	display none

.button-menu
	display none

footer
	width 100%
	bottom 0
	position absolute
	background-color black
	text-align center
	height 65px
	padding-top 2%